<UserControl x:Class="AssemblyInfoHelper.AppInfoButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssemblyInfoHelper"
             xmlns:MetroDialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             xmlns:MetroControls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:github="clr-namespace:AssemblyInfoHelper.GitHub"
             xmlns:properties="clr-namespace:AssemblyInfoHelper.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="90">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/AssemblyInfoHelper;component/Icons/Icon_Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Button Command="{Binding InfoCommand}" ToolTip="{x:Static properties:Resources.AppInfoButtonToolTipString}">
            <ContentControl>
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="Content">
                            <Setter.Value>
                                <StackPanel Orientation="Horizontal">
                                    <Grid>
                                        <MetroControls:FontIcon FontSize="30" Glyph="{StaticResource MDL2_StatusTriangleOuter}" VerticalAlignment="Center" Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"/>
                                        <TextBlock Text="{Binding Source={x:Static github:GitHubUtils.Instance}, Path=NumberNewReleasesString}" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="14" Foreground="{DynamicResource MahApps.Brushes.AccentBase}"/>
                                    </Grid>
                                    <TextBlock Text="!" FontSize="{StaticResource DefaultIconFontSize}" VerticalAlignment="Center" Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" Visibility="{Binding Source={x:Static github:GitHubUtils.Instance}, Path=ErrorOccuredWhileLoadingReleases, Converter={StaticResource BoolVisibilityConverter}}"/>
                                </StackPanel>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Source={x:Static github:GitHubUtils.Instance}, Path=NumberNewReleases}" Value="0">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <StackPanel Orientation="Horizontal">
                                            <MetroControls:FontIcon Glyph="{StaticResource MDL2_Info}" FontSize="{StaticResource DefaultIconFontSize}" Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"/>
                                            <TextBlock Text="!" FontSize="{StaticResource DefaultIconFontSize}" VerticalAlignment="Center" Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" Visibility="{Binding Source={x:Static github:GitHubUtils.Instance}, Path=ErrorOccuredWhileLoadingReleases, Converter={StaticResource BoolVisibilityConverter}}"/>
                                        </StackPanel>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Button>
    </Grid>
</UserControl>
