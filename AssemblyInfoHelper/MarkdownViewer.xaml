<RichTextBox x:Class="AssemblyInfoHelper.MarkdownViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssemblyInfoHelper"
             xmlns:markdown="clr-namespace:Neo.Markdig.Xaml;assembly=Neo.Markdig.Xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             IsReadOnly="True" IsReadOnlyCaretVisible="True">

    <RichTextBox.CommandBindings>
        <CommandBinding Command="{x:Static markdown:MarkdownXaml.Hyperlink}" Executed="CommandBinding_Executed" />
    </RichTextBox.CommandBindings>
</RichTextBox>
