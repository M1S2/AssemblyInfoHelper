<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- This target file is included in the NuGet package and adds the RepositoryUrl as assembly metadata attribute -->
  
  <Target Name="AddRepositoryUrlAssemblyMetadata" AfterTargets="GenerateAssemblyInfo">
    <ItemGroup>
      <AssemblyAttribute Include="System.Reflection.AssemblyMetadataAttribute">
        <_Parameter1>RepositoryUrl</_Parameter1>
        <_Parameter2>$(RepositoryUrl)</_Parameter2>
      </AssemblyAttribute>
    </ItemGroup>
  </Target>

</Project>